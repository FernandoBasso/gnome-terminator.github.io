# editorconfig.org

#
# NOTE: Copied from Jekyll project itself:
#
# https://github.com/jekyll/jekyll/blob/master/.editorconfig
#

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,erb,html,css,scss}]
max_line_length = 80

[*.{md,markdown}]
trim_trailing_whitespace = false

